<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rent Splitter</title>
    <link rel="stylesheet" href="../public/css/foundation.css" />
    <script src="../public/js/vendor/modernizr.js"></script>
  </head>
  <body>
     <!-- body goes here -->

<div class="row main-hero hero">
  <h1>Rent Splitter</h1>
</div>

	<div class="row sign-in"> <!-- START of login/register section -->

<div class="large-6 medium-6 columns">
 	<h3>sign in</h3>
 	<form action='/signin' method='post'>
 	<div class="row"> <!-- row for sign in form -->
 	<div class="large-2 medium-2 small-2 columns"><br></div>
 	<div class="large-8 medium-8 small-8 columns">
   		<input type='text' name='username' placeholder='Username'>
   		<input type='password' name='password' placeholder='Password'>
  </div>
 	<div class="large-2 medium-2 small-2 columns"><br></div>
 	</div> <!-- end of sign-in form row -->

 	<div class="row"> <!-- row for login button -->
 		<!-- <div class="large-3 medium-3 small-3 columns"><br></div> -->
		<input class="button radius" type='submit' value='LOGIN'>
   	<!-- <div class="large-3 medium-3 small-3 columns"><br></div> -->
  </div> <!-- end of row for login button -->

 </form>
</div>

<div class="large-6 medium-6 columns">
 	<h3>register</h3>
 	<form action='/register' method='post'>
 	<div class="row"> <!-- row for registration form -->
 	<div class="large-2 medium-2 small-2 columns"><br></div>
	<div class="large-8 medium-8 small-8 columns">
  <input type='text' name='username' placeholder='Username'>
  <input type='password' name='password' placeholder='Password'>
  <input type='password' name='password_confirmation' placeholder='Confirm Password'>
  </div>
 	<div class="large-2 medium-2 small-2 columns"><br></div>  
 	</div><!-- END of row for registration form -->
  <input class="button radius" type='submit' value='REGISTER'>
  </br>

 </form>
</div>

</div> 


    <script src="js/vendor/jquery.js"></script>
    <script src="js/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>